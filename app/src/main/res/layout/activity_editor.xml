<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 关闭按钮 -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="@android:color/white"
            android:contentDescription="关闭"
            android:layout_marginEnd="16dp" />

        <!-- 帮助按钮 -->
        <Button
            android:id="@+id/btn_help"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:drawable/ic_menu_help"
            app:backgroundTint="@android:color/white"
            android:contentDescription="帮助"
            android:layout_marginEnd="24dp" />

        <!-- 一键超清按钮 -->
        <Button
            android:id="@+id/btn_enhance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键超清"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:background="@drawable/bg_rounded_gray"
            app:backgroundTint="@null"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center" />


        <Button
            android:id="@+id/btn_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="@drawable/bg_rounded_green"
            app:backgroundTint="@null"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:gravity="center" />


    </LinearLayout>

    <!-- 图像画布区域（GLSurfaceView） -->
    <com.laiiiii.photorevive.ui.editor.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />

    <!-- 底部功能导航栏 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 新增的 Undo/Redo 和重置按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:background="#111">

            <!-- Undo 按钮（使用系统向左箭头） -->
            <ImageButton
                android:id="@+id/btn_undo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/actionModeCloseDrawable"
                android:contentDescription="撤销"
                android:layout_marginEnd="16dp" />

            <!-- Redo 按钮（使用系统向右箭头） -->
            <ImageButton
                android:id="@+id/btn_redo"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/actionModeCloseDrawable"
                android:contentDescription="重做"
                android:layout_marginEnd="16dp"
                android:rotation="180" />

            <!-- 重置按钮（居中） -->
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:background="@drawable/bg_rounded_dark"
                android:padding="8dp" />
        </LinearLayout>


        <!-- 功能标签栏 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tab_ai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI修图"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_inactive"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tab_template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="裁剪"
                    android:textSize="12sp"
                    android:textColor="#FF0"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_active"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tab_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人像"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_inactive"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tab_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="滤镜"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_inactive"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tab_adjust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调节"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_inactive"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tab_sticker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贴纸"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:background="@drawable/bg_tab_inactive"
                    android:gravity="center" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 裁剪比例选项区 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#111"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 自由裁剪按钮（默认选中） -->
                <Button
                    android:id="@+id/btn_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自由"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_selected"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <!-- 其他裁剪比例按钮 -->
                <Button
                    android:id="@+id/btn_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:4"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:3"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_9_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:16"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/btn_16_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:9"
                    android:textSize="12sp"
                    android:textColor="#FFF"
                    android:background="@drawable/bg_rounded_dark"
                    android:padding="8dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
